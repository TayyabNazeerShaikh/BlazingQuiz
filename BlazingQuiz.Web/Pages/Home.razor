@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject QuizAuthProvider QuizAuthProvider

<PageTitle>Home</PageTitle>

<h1>Hello, @QuizAuthProvider.User?.Name</h1>

Welcome to your new app.


 <AuthorizeView>
    <Authorizing>
        <p>Authorizing...</p>
    </Authorizing>

    <NotAuthorized>
        <p>No Authorized</p>
    </NotAuthorized>

    <Authorized>
        <p>Authorized: @context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value</p>
    </Authorized>
</AuthorizeView> 

